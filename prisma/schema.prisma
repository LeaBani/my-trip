model MonthList {
  id            Int       @id @default(autoincrement()) 
  monthName     String    @unique
  cityList      CityList[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Itinerary {
  id              Int     @id @default(autoincrement())
  name            String?  
  type            TypeOfItinerary?
  place           String?
  duration        String?
  price           Int?
  priceConverted  Int?
  link            String?
  gallery         String?
  numberOfPersons Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model TypeOfItinerary {
  id            Int     @id @default(autoincrement()) 
  name          Itinerary? @relation(fields: [typeId], references: [id])
  typeId        Int     @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}