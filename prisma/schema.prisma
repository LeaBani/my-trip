generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CountryList {
  id             Int           @id @default(autoincrement())
  name           String        @unique
  cityList       CityList[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model CityList {
  id             Int          @id @default(autoincrement())
  countryName    String       
  name           CountryList  @relation(fields: [countryName], references: [name])
  cityName       String
  description    String?
  monthName      String
  month          MonthList    @relation(fields: [monthName], references: [monthName])
  // duration       Duration?  
  picture        String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

